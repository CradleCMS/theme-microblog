<nav id="toc"></nav>
<article>
    <header>
        <h1>{{ meta.h1 }}</h1>
        <p>
            {% if article.author %}{{ article.author }}<br>{% endif article.author %}<time itemprop="dateModified">{{ article.publishAt | date }}</time> 
    	</p>    
    </header>
    {{ article.excerpt }}
    <hr>
    <div id="content"  class="{{ article.format }}">{{ article.html }}</div>
    <nav id="next-prev">
        <p class="prev">
            {% unless article.previous == empty %}
            <a href="{{ article.previous | url }}">&larr; Previous<br>{{ article.previous.title }}</a>
            {% endunless %}            
        </p>
        <p class="next">
            {% unless article.next == empty %}
            <a href="{{ article.next | url }}">Next &rarr;<br>{{ article.next.title }}</a>
            {% endunless %}            
        </p>
    </nav>
</article>
<style>
#next-prev {
  display: flex;
  justify-content: space-between;
}
#next-prev .next,
#next-prev .prev {
  max-width: 50%;
}
#next-prev .next {
    text-align: right;
}
#content aside {
    padding-left: var(--ok-s-5);
    color: var(--ok-tc-1);
}

@media (width >= 160ch) {
    #content aside {
        padding: var(--ok-s-3);
        position: absolute;
        margin-left: 78ch;
        max-width: 38ch;
    }
    
    #toc {
        padding: var(--ok-s-3);
        position: fixed;
        margin-left: -25ch;
        max-width: 25ch;
    }
}


#content .footnotes ol {
    padding-left: var(--ok-s-5);
    color: var(--ok-tc-1);     
    font-family: monospace;
}

.sidenav ul {
    margin-bottom: var(--ok-s-3);    
}

.sidenav ul ul {
    padding-left: var(--ok-s-3);
}

.sidenav ul ul ul {
    padding-left: var(--ok-s-3);
}
</style>
