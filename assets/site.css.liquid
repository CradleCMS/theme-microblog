/* SITE HEADER */
#title {
    font-size: var(--ok-fs-3);
    margin-top: 0;
    margin-bottom: 0; 
}
#title a {
    color: var(--ok-tc-0);
}
header nav ul li {
    text-transform: uppercase;
}
nav svg {
    display: inline;
    margin-right: var(--ok-s-3);
}
nav a:last-child svg {
    margin-right: 0;
}
#site-header {
  position: fixed;
  width: 100%;
  border-bottom: var(--ok-b-0);
  z-index: 1;
}
#site-header nav {
    margin: 0;
}    
#site-header details.subnav {
    display: inline;
}
#site-header summary {
    cursor: pointer;
    margin:0;
    color: var(--ok-tc-accent);
    font-weight: var(--ok-fw-1);
}
#site-header details.subnav summary:hover {
    text-decoration: underline;
}
summary.hamburger::marker {
    content: "";
}
#site-header details.subnav li {
    display: block;
}
#site-header select { 
    margin-bottom: 0; 
    width: 8rem;
}
.hamburger-menu.wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--ok-s-3);
}
#site-header #topnav {
    background-color: var(--ok-bg-0);   
    border: var(--ok-b-0); 
}
.hamburger-menu #topnav > ul {
    position: absolute;
    right: var(--ok-s-1);
    background-color: var(--ok-bg-0);
    padding: var(--ok-s-2) var(--ok-s-3) var(--ok-s-3) var(--ok-s-3);
    border: var(--ok-b-0);
    border-radius: var(--ok-br);
}
.hamburger-menu details li {
    display: block;
} 
.hamburger-menu details summary svg.close {
    display:none;    
}
.hamburger-menu details[open] summary svg.close {
    display:block;    
    fill: var(--ok-tc-0);
}
.hamburger-menu svg.open {
    display: inline-block;
    height: 1.3rem;     
}
