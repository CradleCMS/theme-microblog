body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

main {
    flex-grow: 2;    
}

#site-header {
    display: flex;
    align-items: baseline;
    gap: var(--ok-s-3);
    flex-wrap: wrap;
    position: sticky;
    top: 0;
    background-color: var(--ok-bg-0);
}

#title {
    font-size: var(--ok-fs-2);
    margin-top: var(--ok-s-3);
    text-transform: uppercase;  
}

header nav ul li {
    text-transform: uppercase;
}

nav svg {
    display: inline;
    margin-right: var(--ok-s-3);
}
nav a:last-child svg {
    margin-right: 0;
}

/* Tategaki header */

.tategaki-header {
    display: flex;
    flex-direction: row-reverse;    
    margin-top: var(--ok-s-4);
}

.tategaki-header header {
    writing-mode: vertical-rl;
    margin-left: var(--ok-s-4);
}

.tategaki-header h1 {
    margin-top:0;
    margin-left: var(--ok-s-2);
}

.tategaki-header li {
    margin-top: 0;
    margin-bottom: var(--ok-s-3);
}

/* Articles */

#content aside {
    padding-left: var(--ok-s-5);
    color: var(--ok-tc-1);
}

@media (width >= 160ch) {
    #content aside {
        padding: var(--ok-s-3);
        position: absolute;
        margin-left: 78ch;
        max-width: 38ch;
    }
    
    #toc {
        padding: var(--ok-s-3);
        position: fixed;
        margin-left: -25ch;
        max-width: 25ch;
    }
}


#content .footnotes ol {
    padding-left: var(--ok-s-5);
    color: var(--ok-tc-1);     
    font-family: monospace;
}

.sidenav ul {
    margin-bottom: var(--ok-s-3);    
}

.sidenav ul ul {
    padding-left: var(--ok-s-3);
}

.sidenav ul ul ul {
    padding-left: var(--ok-s-3);
}


.article-list dd {
    padding-left: var(--ok-s-0);
}

/* Closed site */

#restricted main {
    display: flex;
    justify-content: center;
    align-items: center;
}

#restricted .message {
    padding: var(--ok-s-6);
    background-color:var(--ok-bg-0);
    display: flex;
    flex-direction: column;
    align-items: center;
}

#restricted form {
    display: flex;
    flex-direction: column;    
}

{% if settings.closed_bgimage_use %}
html#restricted {
    background-image: url("{{ 'closed-bg.jpg' | asset_img_url:'1024','0' }}");
    background-size: cover;
}
{% endif %}
