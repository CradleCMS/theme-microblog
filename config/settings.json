{
  "name": "Microblog",
  "version": "0.1.3",
  "developer": "Cradle Systems",
  "description": "Microblog Cradle theme",
  "sections": [
    {
      "key": "global_settings",
      "type": "section",
      "caption": "Global settings",
      "settings": [
        {
          "caption": "Favicon",
          "key": "favicon",
          "type": "header"
        },
        {
          "caption": "Enable custom favicon",
          "default": false,
          "key": "favicon_enable",
          "type": "checkbox"
        },
        {
          "caption": "Favicon",
          "description": "32px x 32px png",
          "filename": "favicon.png",
          "key": "favicon_image",
          "max-height": 32,
          "max-width": 32,
          "type": "asset"
        },
        {
          "caption": "Extra code for the head",
          "key": "head_extra_code",
          "type": "textarea"
        }
      ]
    },
    {
      "key": "colors",
      "type": "section",
      "caption": "Colors",
      "settings": [
        {
          "caption": "General colors",
          "key": "general_colors",
          "type": "header"
        },
        {
          "caption": "Highlight text (--ok-t-hl)",
          "key": "ok-t-hl",
          "type": "color"
        },
        {
          "caption": "Accent (--ok-accent-0)",
          "key": "ok-accent-0",
          "type": "color"
        },
        {
          "caption": "Accent (--ok-accent-1)",
          "key": "ok-accent-1",
          "type": "color"
        },
        {
          "caption": "Light mode",
          "key": "light_mode",
          "type": "header"
        },
        {
          "caption": "Text color (--ok-tc-0)",
          "description": "Used for text",
          "key": "ok-tc-0",
          "type": "color"
        },
        {
          "caption": "Text color (--ok-tc-1)",
          "key": "ok-tc-1",
          "type": "color"
        },
        {
          "caption": "Text color (--ok-tc-2)",
          "key": "ok-tc-2",
          "type": "color"
        },
        {
          "caption": "Accent text color (--ok-tc-accent)",
          "key": "ok-tc-accent",
          "type": "color"
        },
        {
          "caption": "Code color (--ok-tc-code)",
          "key": "ok-tc-code",
          "type": "color"
        },
        {
          "caption": "Dark mode",
          "key": "dark_mode",
          "type": "header"
        },
        {
          "caption": "Text color (--ok-tc-0)",
          "description": "Used for text",
          "key": "d-ok-tc-0",
          "type": "color"
        },
        {
          "caption": "Text color (--ok-tc-1)",
          "key": "d-ok-tc-1",
          "type": "color"
        },
        {
          "caption": "Text color (--ok-tc-2)",
          "key": "d-ok-tc-2",
          "type": "color"
        },
        {
          "caption": "Accent text color (--ok-tc-accent)",
          "key": "d-ok-tc-accent",
          "type": "color"
        },
        {
          "caption": "Code color (--ok-tc-code)",
          "key": "d-ok-tc-code",
          "type": "color"
        }
      ]
    },
    {
      "key": "header",
      "type": "section",
      "caption": "Header",
      "settings": [
        {
          "caption": "Main nav linklist",
          "key": "main_nav",
          "type": "linklist"
        },
        {
          "caption": "Header style",
          "key": "header_tategaki_header",
          "type": "header"
        },
        {
          "caption": "Use Tategaki style",
          "key": "header_tategaki",
          "description": "Will place the header to the right in vertical right to left writing mode.",
          "type": "checkbox"
        }
      ]
    },
    {
      "key": "homepage",
      "caption": "Homepage",
      "type": "section",
      "settings": [
        {
          "key": "hmoepage_page_header",
          "caption": "Page content",
          "type": "header"
        },
        {
          "caption": "Page",
          "default": "Select page",
          "key": "homepage_page",
          "type": "page"
        },
        {
          "caption": "Show page",
          "key": "homepage_page_show",
          "type": "checkbox"
        }
      ]
    },
    {
      "key": "footer",
      "type": "section",
      "caption": "Footer",
      "settings": [
        {
          "caption": "About us text",
          "key": "footer_about_shop",
          "type": "textarea"
        },
        {
          "caption": "Quick links",
          "key": "quick_links",
          "type": "header"
        },
        {
          "caption": "Show links",
          "default": true,
          "key": "footer_quicklinks_enable",
          "type": "checkbox"
        },
        {
          "caption": "Select link lists",
          "description": "Create link-lists under Navigation",
          "key": "footer_linklists",
          "settings": [
            {
              "caption": "Link list",
              "default": "footer",
              "key": "footer_linklist",
              "type": "linklist"
            }
          ],
          "type": "struct"
        }
      ]
    },
    {
      "key": "closed",
      "type": "section",
      "caption": "Closed site",
      "settings": [
        {
          "caption": "Background image",
          "key": "closed_header_bg_image",
          "type": "header"
        },
        {
          "caption": "Use image for background",
          "key": "closed_bgimage_use",
          "type": "checkbox"
        },
        {
          "caption": "Background image",
          "description": "Format: jpg-file, minimum 1024px x 1024p",
          "filename": "closed-bg.jpg",
          "key": "closed_bgimage",
          "type": "asset"
        },
        {
          "caption": "Message",
          "key": "closed_header_text",
          "type": "header"
        },
        {
          "caption": "Title",
          "key": "closed_title",
          "type": "text"
        },
        {
          "caption": "Text",
          "key": "closed_text",
          "type": "text"
        },
        {
          "caption": "Image",
          "key": "closed_header_fg_image_header",
          "type": "header"
        },
        {
          "caption": "Show image",
          "key": "closed_fgimage_use",
          "type": "checkbox"
        },
        {
          "caption": "Size",
          "key": "closed_fgimage_size",
          "options": [
            {
              "caption": "Small, 150px",
              "value": "150"
            },
            {
              "caption": "Medium, 300px",
              "value": "300"
            },
            {
              "caption": "Maximum, 500px",
              "value": "500"
            }
          ],
          "type": "select"
        },
        {
          "caption": "Upload image",
          "description": "Format: png-file, 500px wide",
          "filename": "closed-fg.png",
          "key": "closed_fgimage",
          "type": "asset"
        },
        {
          "caption": "Signup",
          "key": "closed_header_signup",
          "type": "header"
        },
        {
          "caption": "Message",
          "key": "closed_signup_text",
          "type": "text"
        },
        {
          "caption": "Display signup form",
          "description": "NOTE you need to create a form named signup in admin.",
          "key": "closed_signup_true",
          "type": "checkbox"
        },
        {
          "caption": "Button",
          "key": "closed_header_button",
          "type": "header"
        },
        {
          "caption": "Button text",
          "key": "closed_button_text",
          "type": "text"
        },
        {
          "caption": "Add link",
          "key": "closed_button_link",
          "type": "text"
        }
      ]
    }
  ]
}
