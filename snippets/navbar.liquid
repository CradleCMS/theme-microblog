{% assign main-nav = settings.main_nav %}
<nav class="">
    <details id="topnav" class="nav">
        <summary class="hamburger">
            <svg class="open" width='24px' height='24px' viewBox='0 0 24 24' version='1.1' xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink'>
                <g id='Menu' color='var(--ok-tc-0)'>
                <title>Menu</title>
                	<line x1='5' y1='7' x2='19' y2='7' id='Path' stroke='currentcolor' stroke-width='2' stroke-linecap='round'></line>
                	<line x1='5' y1='17' x2='19' y2='17' id='Path' stroke='currentcolor' stroke-width='2' stroke-linecap='round'></line>
                	<line x1='5' y1='12' x2='19' y2='12' id='Path' stroke='currentcolor' stroke-width='2' stroke-linecap='round'></line>
                </g>
            </svg>
            <svg class="close" viewBox='0 0 24 24' width='24px' height='24px' xmlns='http://www.w3.org/2000/svg'>
                <g id='Close' color='var(--ok-tc-0)'>
                    <path d='M6.99486 7.00636C6.60433 7.39689 6.60433 8.03005 6.99486 8.42058L10.58 12.0057L6.99486 15.5909C6.60433 15.9814 6.60433 16.6146 6.99486 17.0051C7.38538 17.3956 8.01855 17.3956 8.40907 17.0051L11.9942 13.4199L15.5794 17.0051C15.9699 17.3956 16.6031 17.3956 16.9936 17.0051C17.3841 16.6146 17.3841 15.9814 16.9936 15.5909L13.4084 12.0057L16.9936 8.42059C17.3841 8.03007 17.3841 7.3969 16.9936 7.00638C16.603 6.61585 15.9699 6.61585 15.5794 7.00638L11.9942 10.5915L8.40907 7.00636C8.01855 6.61584 7.38538 6.61584 6.99486 7.00636Z' fill='#currentColor'></path>
                </g>
            </svg>
        </summary>
        <ul {% if settings.header_mega %}class="mega-menu"{% endif %}>
        {% for link in navigation[main-nav].links %}
            {% if link.type == 'navigation' %}
             <li>
                <details class="subnav nav" {% if settings.header_mega and settings.header_hamburger %}open{% endif %}>
                    <summary>{{ link.title }}</summary>
                    <ul>
                    {% for childlink in navigation[link.handle].links %}
                        <li><a href="{{ childlink.url }}">{{ childlink.title }}</a></li>
                    {% endfor %}                    
                    </ul>
                </details>
            </li>           
            {% else %}
            <li><a href="{{ link | url }}">{{ link.title }}</a></li>
            {% endif %}
        {% endfor %}
        </ul>
    </details>
</nav>   
