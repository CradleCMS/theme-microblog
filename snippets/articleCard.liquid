<div class="article-post">
    <a href="{{ article | url }}">
        <div class="article-content">
            <div>
                <h3>{{ article.title }}</h3>
                <time itemprop="datePublished" datetime="{{ article.publishAt | date }}">{{ article.publishAt | date }}</time>
                <br>
                {% if article.excerpt.size > 0 %}
        		    <p>{{ article.excerpt | strip_html | truncatewords: 20 }}</p>
        		{% else %}
        			<p>{{ article.html | strip_html | truncatewords: 20 }}</p>
        		{% endif %}	
            </div>   
            <img src="{{ article | img_url:150,0 }}" alt="{{ article.image.alt }}" />
        </div>
    </a>
</div>
